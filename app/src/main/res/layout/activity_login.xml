<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context="me.chiying.ching.LoginActivity">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_user" />

            <EditText
                android:background="@drawable/login_username"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/login_username"
                android:hint="@string/login_username_hint" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_password" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:id="@+id/login_password"
                android:hint="@string/login_username_hint" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:background="@drawable/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <Button
                android:background="@drawable/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_register"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 注册界面 -->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_user" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/register_username"
                android:hint="@string/login_username_hint" />
            <Button
                android:background="@color/color_524944"
                android:text="@string/register_captcha_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_password" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:id="@+id/register_password"
                android:hint="@string/login_username_hint" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:background="@drawable/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_button"/>

        </LinearLayout>

        <TextView
            android:id="@+id/register_login_text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/register_login_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
